<% include ../partials/header %>
    



<div class="container">
      <header class="jumbotron">
              <div class="container">
                  <h1>Welcome to YelpCamp! </h1>
                  <p>View our handpicked campgrounds from all over the world</p>
                   <p> <a class="btn btn-primary btn-large" href="/campgrounds/new">Add a new Campground</a> </p> 
              </div>       
      </header>
        
      <div class="row text-center" style="display:flex; flex-wrap:wrap;">
            <% abcd.forEach(function(campa){ %>
             <div class="col-md-3 col-sm-6">
                   <div class="thumbnail">
                       
                       <img src="<%= campa.image %>" >
                     <div class
                         <h4><%= campa.name %></h4>
                
                   </div>
                   <p>
                       <a href="/campgrounds/<%= campa._id%>" class="btn btn-primary">More Info</a>
                   </p>
                </div> 
               </div>
            <% }); %>
</div>

<a href="/"> Landing Page</a>
<%include ../partials/footer %>