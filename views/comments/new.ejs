<% include ../partials/header %>

<div class="conatiner">
 
    <div class="row">
            <div style="text-align: center"><h1>Add comment to <%= campground.name %></h1>
             <div style="width:30%; margin:30px auto;">
                        <form action="/campgrounds/<%= campground._id%>/comments" method="POST">
                               
                                <div class="form-group">
                                <input class="form-control" type="text" name="comment[text]" placeholder="text">
                                </div>
                                <div class="form-group">
                                <input class="form-control" type="text" name="comment[author]" placeholder="author">
                                </div>
                               
                                <div class="form-group">
                                <button class="btn btn-lg btn-primary btn-block">Submit</button>
                                </div>
                                
                        </form>
                    
                    <a href="/campgrounds">Back to campgrounds page</a>
                </div>
            </div>
    </div>
</div>
<% include ../partials/footer %>